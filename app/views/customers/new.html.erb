<h1>New customer</h1>

<% if flash[:error] %>
	<p class="error"><%= flash[:error] %></p>
<% end %>

<%= form_for @form do |f| %>
	<p>
		<%= f.label :name, 'Name' %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :email, 'Email' %>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :phone_number, 'Phone' %>
		<%= f.text_field :phone_number %>
	</p>

	<p>
		<%= f.submit "Create" %>
	</p>
<% end %>
